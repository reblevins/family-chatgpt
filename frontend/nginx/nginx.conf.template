events {
    worker_connections 1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    sendfile      on;
    keepalive_timeout  65;

    # Define the server block for the frontend
    server {
        listen       ${PORT};  # Listen on port provided by Heroku for HTTP requests
        server_name  localhost;

        # Serve static files from the 'dist' directory (the Vue.js build output)
        location / {
            root   /usr/share/nginx/html;
            index  index.html index.htm;
            try_files $uri $uri/ /index.html;
        }
    }
}
